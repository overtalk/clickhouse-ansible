<yandex>
    <!-- 集群配置 -->
    <clickhouse_remote_servers>
        <clickhouse_cluster>

        <!-- 数据分片  -->
{% for group in groups %}
{% if group[:5] == 'shard' %}
        <shard>
            <internal_replication>true</internal_replication>
{% for ip in groups[group] %}
                <replica>
                    <host>{{ ip }}</host>
                    <port>9000</port>
                    <user>default</user>
                    <password></password>
                </replica>
{% endfor %}
        </shard>
{% endif %}
{% endfor %}
        </clickhouse_cluster>
    </clickhouse_remote_servers>

    <!-- ZK  -->
    <zookeeper-servers>
{% for ip in groups['zookeeper'] %}
        <node index="{{ hostvars[ip]['ZOOKEEPER_INDEX'] }}">
            <host>{{ ip }}</host>
            <port>2181</port>
        </node>
{% endfor %}
    </zookeeper-servers>

    <networks>
        <ip>::/0</ip>
    </networks>

    <macros>
        <shard>shard_{{CLICKHOUSE_SHARD}}</shard>
        <replica>replica_{{CLICKHOUSE_REPLICA}}</replica>
    </macros>

    <!-- 数据压缩算法  -->
    <clickhouse_compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </clickhouse_compression>

</yandex>
