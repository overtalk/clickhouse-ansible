<yandex>

    <!-- 集群配置 -->
    <clickhouse_remote_servers>
        <cluster_3s_1r>

        <!-- 数据分片  -->
{% for ip in groups['clickhouse'] %}
        <shard>
            <internal_replication>false</internal_replication>
                <replica>
                    <host>{{ ip }}</host>
                    <port>9000</port>
                    <user>default</user>
                    <password></password>
                </replica>
            </shard>
{% endfor %}
        </cluster_3s_1r>
    </clickhouse_remote_servers>

    <!-- ZK  -->
    <zookeeper-servers>
{% for ip in groups['zookeeper'] %}
        <node index="{{ hostvars[ip]['ZOOKEEPER_INDEX'] }}">
            <host>{{ ip }}</host>
            <port>2181</port>
        </node>
{% endfor %}
    </zookeeper-servers>

    <networks>
        <ip>::/0</ip>
    </networks>

    <!-- 数据压缩算法  -->
    <clickhouse_compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </clickhouse_compression>

</yandex>
